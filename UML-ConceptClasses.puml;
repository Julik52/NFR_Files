@startuml
skinparam classAttributeIconSize 1

class Користувач {
    +ім’я
    +прізвище
    +електронна_адреса
    +номер_телефону
    +останній_вхід
}


class МоніторингТемператури {
    +статус
    +дата_встановлення
    +нижня_межа
    +верхня_межа
    +одиниця
    +частота_збору_даних
}

class МоніторингБезпеки {
    +статус
    +дата_встановлення
    +пріоритет_ризиків
    +частота_збору_даних
    +типи_ризику
}

class ПоточнийСтанБезпеки {
    +загальний_статус
    +останнє_оновлення
}

class ПоточнаТемпература {
    +значення
    +час_зняття
}

class Сповіщення {
    +повідомлення
    +дата_і_час
    +тип_сповіщення
}

class Датчик {
    +назва
    +тип
    +виробник
    +модель
}

class Локація {
    +назва_локації       
    +тип_локації         
    +будівля           
    +поверх
}

' ----------------- Зв’язки -----------------

Користувач "1" --> "0..*" МоніторингТемператури : створює/керує
Користувач "1" --> "0..*" МоніторингБезпеки : створює/керує

МоніторингТемператури "1" *-- "1" ПоточнаТемпература : містить (композиція)
МоніторингТемператури "0..1" --> "1" Датчик : використовує (асоціація)

МоніторингБезпеки "1" *-- "1" ПоточнийСтанБезпеки : відображає (композиція)
МоніторингБезпеки "0..*" --> "0..*" Датчик : використовує (асоціація)

Локація "1" *-- "0..*" Датчик : містить (композиція)

МоніторингТемператури "1" --> "0..*" Сповіщення : генерує
МоніторингБезпеки "1" --> "0..*" Сповіщення : генерує
Користувач "1"<-- "0..*" Сповіщення : отримує (агрегація)


@enduml
