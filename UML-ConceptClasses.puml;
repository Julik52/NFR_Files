@startuml
skinparam classAttributeIconSize 1
hide circle

class User {
    +first_name
    +last_name
    +email
    +phone_number
    +last_login
}

class Monitorings {
    +monitoring_name
    +status
    +installation_date
    +data_collection_frequency
}

class TemperatureMonitoring {
    +lower_limit
    +upper_limit
}

class SecurityMonitoring {
    +risk_priority
    +risk_types
}

class CurrentTemperature {
    +value
    +last_update
}

class CurrentSecurityStatus {
    +overall_status
    +last_update
}

class Notification {
    +message
    +datetime
    +event_category
}

class Sensor {
    +name
    +type
    +manufacturer
    +model
}

class Locations {
    +location_name
    +location_type
    +building
    +floor
}

' --- Relationships ---
User "1" --> "0..*" Locations : owns
Locations "1" *-- "0..*" Sensor : contains

User "1" --> "0..*" Monitorings : creates/manages
Monitorings <|-- TemperatureMonitoring
Monitorings <|-- SecurityMonitoring

TemperatureMonitoring "1" *-- "1" CurrentTemperature : contains
Monitorings "1" --> "1..*" Sensor : uses

SecurityMonitoring "1" *-- "1" CurrentSecurityStatus : reflects

Monitorings "1" --> "0..*" Notification : generates
User "1" <-- "0..*" Notification : receives

@enduml
