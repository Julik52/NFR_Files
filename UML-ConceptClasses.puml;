@startuml
skinparam classAttributeIconSize 1

hide circle

class Користувач {
    +ім’я
    +прізвище
    +електронна_адреса
    +номер_телефону
    +останній_вхід
}

class Моніторинг {
    +назва_моніторингу
    +статус
    +дата_встановлення
    +частота_збору_даних
}

class МоніторингТемператури {
    +нижня_межа
    +верхня_межа
    +одиниця
}

class МоніторингБезпеки {
    +пріоритет_ризиків
    +типи_ризику
}

class ПоточнаТемпература {
    +значення
    +останнє_оновлення
}

class ПоточнийСтанБезпеки {
    +загальний_статус
    +останнє_оновлення
}

class Сповіщення {
    +повідомлення
    +дата_і_час
    +категорія_події
}

class Датчик {
    +назва
    +тип
    +виробник
    +модель
}

class Локація {
    +назва_локації
    +тип_локації
    +будівля
    +поверх
}


Користувач "1" --> "0..*" Моніторинг : створює/керує

Моніторинг <|-- МоніторингТемператури
Моніторинг <|-- МоніторингБезпеки

МоніторингТемператури "1" *-- "1" ПоточнаТемпература : містить
МоніторингТемператури "0..1" --> "1" Датчик : використовує

МоніторингБезпеки "1" *-- "1" ПоточнийСтанБезпеки : відображає
МоніторингБезпеки "0..*" --> "0..*" Датчик : використовує

Локація "1" *-- "0..*" Датчик : містить

Моніторинг "1" --> "0..*" Сповіщення : генерує
Користувач "1" <-- "0..*" Сповіщення : отримує

@enduml
